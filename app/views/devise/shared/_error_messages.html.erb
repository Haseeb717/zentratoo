  <div id="error_explanation">
    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>

        <% if notice %>
          <div class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            <%= notice %>
          </div>
        <% end %>
        
      <% end %>
    </ul>
  </div>
<% end %>
